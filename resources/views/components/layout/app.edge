<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    @vite(['resources/css/app.css', 'resources/js/app.js'])
    <title>
      {{ title }}
    </title>

   
  </head>
  <body class="text-white font-mono">
    <audio id="coinSound" src="https://www.myinstants.com/media/sounds/mario-coin.mp3" preload="auto"></audio>

  <header class="flex flex-wrap sm:justify-start sm:flex-nowrap w-full bg-transparent text-sm py-3">
    <nav class="max-w-[85rem] w-full mx-auto px-4 sm:flex sm:items-center sm:justify-between">
      <a class="neon-text flex-none font-semibold text-xl focus:outline-hidden focus:opacity-80" href="/" aria-label="Brand">NeoLearn</a>

      <div class="flex flex-row items-center gap-5 mt-5 sm:justify-end sm:mt-0 sm:ps-5">
        @eval(await auth.check())
        @if(auth.isAutenticated)
          <div class="neon-text">{{ auth.user.name}}</div>
          <form action="/logout?_method=DELETE" method="post">
            {{ csrfField() }}
            <button class="neon-button">Log out</button>
          </form>
        @else
          <a href="/login" class="neon-button">Log in</a>
          <a href="/register" class="neon-button">Register</a>
        @end
      </div>
    </nav>
  </header>

  <main class="grow">
    {{{ await $slots.main() }}}
  </main>

  <!-- Script untuk efek suara koin -->
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const coinSound = document.getElementById("coinSound");
      const clickables = document.querySelectorAll("button, a");

      clickables.forEach(el => {
        el.addEventListener("click", () => {
          coinSound.currentTime = 0;
          coinSound.play();
        });
      });
    });
  </script>
